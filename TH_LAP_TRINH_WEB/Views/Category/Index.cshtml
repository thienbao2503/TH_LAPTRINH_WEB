@model IEnumerable<TH_LAP_TRINH_WEB.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="header-table">
        <h1>DS Danh Mục</h1>

        <p>
            <a asp-action="Add">Thêm mới</a>
        </p>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <div class="table_btn">
                            @Html.ActionLink("Cập Nhật", "Update", new { id = item.Id }) |
                            @Html.ActionLink("Chi tiết", "Display", new { id = item.Id }) |
                            @Html.ActionLink("Xóa", "Delete", new { id = item.Id })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
