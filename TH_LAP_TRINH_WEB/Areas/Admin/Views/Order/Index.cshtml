@model IEnumerable<TH_LAP_TRINH_WEB.Models.Order>

@{
    ViewData["Title"] = "Your Orders";
}

<div class="container">
    <h2>DS Đơn Hàng</h2>

    <table class="table">
        <thead>
            <tr>
                <th>ID Đơn hàng</th>
                <th>Ngày đặt</th>
                <th>Tổng giá trị đơn hàng</th>
                <th>Hàng động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.OrderDate.ToString("g")</td>
                    <td>@order.TotalPrice.ToString("N0") đ</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info">Xem chi tiết</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>